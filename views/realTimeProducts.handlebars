<h1>Lista de productos (tiempo real)</h1>

<form id="productForm">
  <input name="title" placeholder="Nombre del producto" required />
  <input name="price" type="number" placeholder="Precio" required />
  <button type="submit">Agregar producto</button>
</form>

<ul id="productList"></ul>

<script src="/socket.io/socket.io.js"></script>
<script>
  const socket = io();

  const form = document.getElementById('productForm');
  const list = document.getElementById('productList');

  form.addEventListener('submit', e => {
    e.preventDefault();
    const data = {
      id: Date.now(),
      title: form.title.value,
      price: form.price.value
    };
    socket.emit('add-product', data);
    form.reset();
  });

  socket.on('update-products', products => {
    list.innerHTML = '';
    products.forEach(p => {
      const li = document.createElement('li');
      li.textContent = `${p.title} - $${p.price}`;
      li.addEventListener('click', () => {
        socket.emit('delete-product', p.id);
      });
      list.appendChild(li);
    });
  });
</script>
